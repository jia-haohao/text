<h1>Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class = "container">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class = "container">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <br>

  <div class = "container">
    <%= submit_tag("Log in", {class: "btn btn-primary"}) %>
  </div>
<% end %>