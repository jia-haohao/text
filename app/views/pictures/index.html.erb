<h1>画像一覧</h1>
<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
  </tr>
  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.user.name %></td>
      <td><%= picture.title %></td>
      <td><%= picture.content %></td>
      <td><%= image_tag picture.image.url, style: 'width: 400px; height: 240px' if picture.image_url %></td>
      <td><%= link_to '詳細', picture_path(picture.id), class: "btn btn-primary" %></td>
      <td><%= link_to '編集', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか' }, class: "btn btn-primary" %></td>
      <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか' }, class: "btn btn-primary" %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to '新しい画像を投稿', new_picture_path, class: "btn btn-success" %>